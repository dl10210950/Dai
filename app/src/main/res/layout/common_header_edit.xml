<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/common_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="#ffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.duanlian.daimeng.ui.view.CircleImageView
            android:id="@+id/common_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/head" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/daimeng"
            android:layout_toRightOf="@+id/common_head">


            <EditText
                android:id="@+id/common_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@mipmap/seach"
                android:paddingLeft="6dp"
                android:layout_centerVertical="true"
                android:background="@drawable/common_header_edit_shap" />

            <ImageView
                android:id="@+id/common_clean"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:visibility="gone"
                android:background="@mipmap/clean"/>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/daimeng"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/icon_dai" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/icon_meng" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>